<!DOCTYPE html>
<html ng-app="RandomNumberApp" ng-controller="LandingPageController">
<head>
    <title ng-bind="title">RandomNumbers</title>
    <script src="//cdnjs.cloudflare.com/ajax/libs/angular.js/1.2.20/angular.min.js"></script>
    <script src="~/chart.js/Chart.min.js"></script>
    <script type="text/javascript" src="//cdn.jsdelivr.net/angular.chartjs/latest/angular-chart.min.js"></script>
    <link rel="stylesheet" type="text/css" href="//cdn.jsdelivr.net/angular.chartjs/latest/angular-chart.css" />
    <script src="https://ajax.aspnetcdn.com/ajax/jquery/jquery-2.2.0.min.js"></script>
    <script src="https://ajax.aspnetcdn.com/ajax/bootstrap/3.3.6/bootstrap.min.js"></script>
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <link href="~/Content/Site.css" rel="stylesheet" />
</head>
<body class="jumbotron">
    <div class="container">
        <div class="text-center"><h1>Welcome to the random numbers fetcher!</h1></div>
        <form>
            <div class="form-group">
                <label>Optional submit:</label>
            </div>
            <div class="form-inline">
                <label>
                    How many numbers would you like to generate?
                </label><br />
                 <input type="text" class="form-control" ng-model="models.randomNumberLength" />               
                <button class="btn btn-info" ng-click="getRandomNumbers(models.randomNumberLength)">Get {{models.randomNumberLength}} Random Numbers</button>
            </div><br />
                <div class="form-group">
                    <label> As per requirement number 6:</label>
                    <button class="btn btn-info" ng-click="getRandomNumbers(100)">Get 100 New Random Numbers</button>
                </div>
                <canvas id="line" class="chart chart-line" chart-data="data" ng-show="models.results"
                        chart-labels="labels" chart-series="series" chart-options="options"
                        chart-dataset-override="datasetOverride" chart-click="onClick"></canvas>
                <div class="form-group" ng-show="!models.results">
                    <label>No numbers generated</label>
                </div>
                <div class="form-group" ng-show="models.results">
                    <label>Thank you. Your random numbers are:</label>
                    <table class="table table-bordered table-responsive table-striped">
                        <tr>
                            <td class="item">Index</td>
                            <td class="item">Generated Number</td>
                        </tr>
                        <tr ng-repeat="integer in models.results track by $index">
                            <td class="item">{{ $index + 1 }}</td>
                            <td class="item">{{ integer }}</td>
                        </tr>
                    </table>
                </div>
            </form>
    </div>
  
    @Scripts.Render("~/bundles/RandomNumberApp")

</body>

</html>